@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="row">
	<div class="col-md-12">
		@if (User.Identity.IsAuthenticated)
		{
			<div class="row main-content">
				<div class="col-md-2">
					<img src="@Model.AvatarUrl" alt="" class="img-thumbnail" />
				</div>
				<div class="col-md-10">
					<h4>@Model.FirstName @Model.LastName</h4>
					<h5>@Model.Email</h5><br />

					@if (Model.Roles.Any())
					{
						<h4>Roles</h4>
						<ul>
							@foreach (var role in Model.Roles)
							{
								<li>@role</li>
							}
						</ul>
						<br />
					}

					@if (Model.Orders != null && Model.Orders.Any())
					{
						<h4>Orders</h4>
						<ul>
							@foreach (var order in Model.Orders)
							{
								<li>@order</li>
							}
						</ul>
					}
				</div>
			</div>
		}
		else
		{
			<a asp-action="SignIn" asp-controller="Account" class="btn btn-default" style="margin-top: 25px">Log In with Matrix42</a>
		}
	</div>
</div>
